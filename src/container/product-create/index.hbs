{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main>
  <section>
    <div class='form'>
      <h1 class='form__title'>Product information</h1>
      <form method='POST' action='/product-create'>
        <div class='form__content'>
          <div class='double_field'>
            <div class='form__field'>
              <label class='form__label'>Product name</label>
              <input
                type='name'
                name='name'
                class='form__input'
              />
            </div>
            <div class='form__field'>
              <label
                for='price'
                class='form__label'
              >Price</label>
              <input
                type='price'
                name='price'
                class='form__input'
              />
            </div>
          </div>
          <div class='form__field'>
            <label class='form__label'>Brief product
              description</label>
            <input
              type='description'
              name='description'
              class='form__input form__large'
            />
            <textarea>Displays in the product card</textarea>
          </div>
          <button class='form__button'>Create product</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>Product list</h1>
      <div class='product-list'>
        {{#with data.products}}
          {{#if isEmpty}}<mark>Empty</mark>
          {{else}}
            <ul>
              {{#each list}}
                <li>{{name}}
                  |
                  {{price}}
                  |
                  {{id}}
                  <a
                    href='/product-delete?id={{id}}'
                  >(delete)</a></li>
              {{/each}}
            </ul>
          {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

</main>

