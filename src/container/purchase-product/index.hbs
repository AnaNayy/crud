{{#with data.product}}

<form method="POST" action="/purchase-create?id={{id}}">
  <div class="product-info">
      <img src="{{img}}" alt="{{title}}" class="product-info__image">
      <h2 class="product-info__title">{{title}}</h2>
      <p class="product-info_subtitle">{{description}}</p>

{{>divider}}
      {{!-- <div class="product-info__divider"></div> --}}

      {{#each category}}
        <span class="product-info__category product-info__category--{{id}}">{{text}}</span>
      {{/each}}

       {{!-- <div class="product-info__divider"></div> --}}
{{>divider}}

       {{>field label="Кількість" type="number" name="amount" value="1"}}

       {{!-- <button href="/purchase-product?id={{id}} class="product-info__button"> Buy now </button> --}}
       {{!-- <a href="/purchase-product?id={{id}}" class="product-info__button">Купити зараз: {{price}} грн</a> --}}

{{>button text="Купити зараз" price=price}}

  </div>
</form>
{{/with}}

{{>divider}}

  {{> heading title="Інші товари" info="Компʼютери та ноутбуки"}}

  <div class="product-list">
  {{#each data.list}}
      {{> purchase-product data=this}}
  {{/each}}
</div>
</main>

